{
	"env": {
		"node": true,
		"es2021": true,
		"browser": true
	},
	"extends": [
		"eslint:recommended",
		"next/core-web-vitals",
		"plugin:react/recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module",
		"ecmaVersion": "latest"
	},
	"plugins": ["react", "@typescript-eslint"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"endOfLine": "auto"
			},
			{
				"usePrettierrc": true
			}
		],
		"react/react-in-jsx-scope": "off"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
